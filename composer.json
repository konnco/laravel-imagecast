{
    "name": "konnco/laravel-imagecast",
    "description": "Make easier to store images into database",
    "keywords": [
        "konnco",
        "laravel",
        "laravel-imagecast"
    ],
    "homepage": "https://github.com/konnco/laravel-imagecast",
    "license": "MIT",
    "authors": [
        {
            "name": "Franky So",
            "email": "frankyso.mail@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^9.0",
        "illuminate/contracts": "^9.0",
        "intervention/image": "^2.5",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Konnco\\ImageCast\\": "src",
            "Konnco\\ImageCast\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Konnco\\ImageCast\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Konnco\\ImageCast\\ImageCastServiceProvider"
            ],
            "aliases": {
                "ImageCast": "Konnco\\ImageCast\\ImageCastFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
